.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f2f2f2;
}

.input-box {
  width: 80%;
  height: 40px;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
  margin-bottom: 20px;
}

.publish-button {
  width: 100px;
  height: 40px;
  background-color: #1aad19;
  color: white;
  text-align: center;
  line-height: 40px;
  border-radius: 4px;
}
